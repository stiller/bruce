<fieldset>
  <% f.fields_for :selections do |s| %>
    <%= s.label :banner, :class => 'control-label' %>
    <div class='controls'>
      <%= s.check_box :enabled %>
      <%= image_tag s.object.banner.url, width: '35' %>
      <%= s.text_field :weight %>
    </div>
  <% end %>
</fieldset>

<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:campaigns, :index), :class => 'btn btn-default' %>
</div>
