<% error = @campaign.errors.include?(:strategy1) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :strategy1, :class => 'control-label' %>
  <div class='controls'>
    <%= f.select :strategy1, :options => Campaign.strategies, :selected => 'Random', :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:strategy1) : "Ex: a simple text" %></span>
  </div>
</fieldset>
