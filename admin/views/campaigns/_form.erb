<fieldset>
<%- f.fields_for :selections do |selection_form| %>
  <div class='controls'>
    <%= selection_form.label :banner, :class => 'control-label' %>
    <%= selection_form.select :banner_id, collection: Banner.all, fields: [:url, :id], :class => 'form-control input-with-feedback' %>
  </div>
  <%= selection_form.label :weight, :class => 'control-label' %>
  <div class='controls'>
    <%= selection_form.text_field :weight, :class => 'form-control input-xlarge input-with-feedback' %>
  </div>
  <%- unless selection_form.object.new_record? %>
    <%= selection_form.check_box '_destroy' %>
    <%= selection_form.label '_destroy', :caption => 'Remove' %>
  <% end %>
<% end %>
</fieldset>
<%= link_to_add_fields "Add Banner", f, :selections %>

<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:campaigns, :index), :class => 'btn btn-default' %>
</div>
